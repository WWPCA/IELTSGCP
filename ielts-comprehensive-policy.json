{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "bedrock:*",
                "lambda:*",
                "apigateway:*",
                "dynamodb:*",
                "route53:*",
                "acm:*",
                "cloudformation:*",
                "cloudwatch:*",
                "logs:*",
                "iam:PassRole",
                "iam:GetRole",
                "iam:CreateRole",
                "iam:AttachRolePolicy",
                "iam:DetachRolePolicy",
                "iam:ListRoles",
                "iam:ListRolePolicies",
                "iam:ListAttachedRolePolicies",
                "elasticache:*",
                "s3:*",
                "ec2:DescribeVpcs",
                "ec2:DescribeRegions",
                "cognito-idp:*",
                "sns:*",
                "ses:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:username": "WWP"
                }
            }
        }
    ]
}