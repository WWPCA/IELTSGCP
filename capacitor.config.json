{
  "appId": "com.ieltsgenaiprep.app",
  "appName": "IELTS AI Prep",
  "webDir": "static",
  "server": {
    "url": "https://www.ieltsaiprep.com",
    "cleartext": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#2563eb",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    },
    "StatusBar": {
      "style": "dark"
    },
    "Device": {
      "enabled": true
    },
    "Network": {
      "enabled": true
    },
    "App": {
      "enabled": true,
      "deepLinkHostname": "www.ieltsaiprep.com",
      "deepLinkScheme": "ieltsgenaiprep"
    },
    "Toast": {
      "enabled": true
    }
  },
  "ios": {
    "contentInset": "automatic",
    "scheme": "ieltsgenaiprep",
    "allowsLinkPreview": false,
    "preferredContentMode": "mobile"
  },
  "android": {
    "allowMixedContent": false,
    "captureInput": true,
    "webContentsDebuggingEnabled": false,
    "scheme": "ieltsgenaiprep",
    "minWebViewVersion": 60
  }
}
