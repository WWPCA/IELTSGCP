{
  "appId": "com.ieltsaiprep.app",
  "appName": "IELTS GenAI Prep",
  "webDir": "static",
  "server": {
    "url": "https://api.ieltsaiprep.com",
    "cleartext": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#2563eb",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    },
    "StatusBar": {
      "style": "dark"
    },
    "Device": {
      "enabled": true
    },
    "Network": {
      "enabled": true
    },
    "App": {
      "enabled": true
    }
  },
  "ios": {
    "contentInset": "automatic",
    "scheme": "https"
  },
  "android": {
    "allowMixedContent": false,
    "captureInput": true,
    "scheme": "https"
  }
}
