{
  "appId": "com.ieltsaiprep.app",
  "appName": "IELTS GenAI Prep",
  "webDir": "static",
  "server": {
    "url": "https://ieltsaiprep.com",
    "cleartext": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#2563eb",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    },
    "StatusBar": {
      "style": "dark"
    },
    "App": {
      "launchUrl": "https://ieltsaiprep.com"
    }
  },
  "ios": {
    "contentInset": "automatic",
    "allowsLinkPreview": false
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true
  }
}
